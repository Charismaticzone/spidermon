FROM python:3.6

RUN apt-get update -qq && \
    apt-get install -qy libpython-dev libpython3-dev

RUN mkdir -p /app
WORKDIR /app
COPY . /app
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install tox==2.9.1

